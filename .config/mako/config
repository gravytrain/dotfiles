### Mode-specific overrides (to be used with makoctl mode)

# Focus mode - minimal notifications
[mode=focus]
invisible=1

# Do Not Disturb mode - hide low urgency
[mode=dnd urgency=low]
invisible=1

# Do Not Disturb mode - hide normal urgency
[mode=dnd urgency=normal]
invisible=1

# Silent mode - no sound, short timeouts
[mode=silent]
default-timeout=2000
