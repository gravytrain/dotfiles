# Mako Notification Daemon Configuration
# Enhanced for development workflow
# Theme: Tokyo Night

### Default notification settings
font=JetBrainsMono Nerd Font 11
background-color=#1a1b26
text-color=#c0caf5
border-color=#7aa2f7
border-size=2
border-radius=0
padding=15
margin=10
width=400
height=150
icon-path=/usr/share/icons/Papirus-Dark

# Position notifications at top-right
anchor=top-right
max-visible=5
layer=overlay

# Default timeout: 5 seconds
default-timeout=5000

# Group notifications by app
group-by=app-name

# Enable markup for rich formatting
markup=1

# Max icon size
max-icon-size=64

# Notification actions
actions=1

### Per-urgency styling

# Low urgency (info)
[urgency=low]
background-color=#1a1b26
text-color=#a9b1d6
border-color=#3b4261
default-timeout=3000

# Normal urgency
[urgency=normal]
background-color=#1a1b26
text-color=#c0caf5
border-color=#7aa2f7
default-timeout=5000

# High urgency (critical alerts)
[urgency=critical]
background-color=#24283b
text-color=#f7768e
border-color=#f7768e
default-timeout=0
ignore-timeout=1

### Application-specific notification styles

# Build notifications (success)
[app-name="builds" summary~=".*success.*|.*passed.*|.*complete.*"]
background-color=#2b3339
border-color=#a7c080
text-color=#a7c080
default-timeout=4000

# Build notifications (failure)
[app-name="builds" summary~=".*fail.*|.*error.*"]
background-color=#2b3339
border-color=#e67e80
text-color=#e67e80
default-timeout=0

# Test notifications (success)
[app-name="tests" summary~=".*pass.*|.*success.*"]
background-color=#2b3339
border-color=#a7c080
text-color=#d3c6aa
